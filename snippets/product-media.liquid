<div class="carousel-container prod-page">
  <div class="top-container">
    <span class="arrow arrow-left disabled" style="visibility: hidden;"></span>
    <div class="main-image-container">
      {%- assign featured_image = product.featured_image -%}
      <img src="{{ featured_image | image_url: width: 1024 }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ featured_image.alt | escape }}" class="current-image" loading="lazy" data-target="media-modal" data-toggle="modal" data-modal="true">
    </div>
    <span class="arrow arrow-right" style="visibility: hidden;"></span>
  </div>
  <div class="thumbnail-container">
    <ul class="next-list">
      {% for media in product.media %}
        {%- case media.media_type -%}
          {%- when 'image' -%}
            <li><img src="{{ media | image_url: width: 1024 }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ media.preview_image.alt }}" class="image-of-list" loading="lazy"></li>
          {%- else -%}
        {%- endcase -%}
      {% endfor %}
    </ul>
  </div>
</div>

