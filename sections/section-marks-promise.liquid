{%- capture styling -%}
  {%- if section.settings.bg_color != blank -%}
    --bg-color: {{ section.settings.bg_color }};
  {%- endif -%}
  {%- if section.settings.bg_image != blank -%}
    --background-image: url({{ section.settings.bg_image | image_url }});
  {%- endif -%}
  {%- if section.settings.section_spacing_top != blank -%}
    --section-spacing-top: {% render 'to-rem', n: section.settings.section_spacing_top %};
  {%- endif -%}
  {%- if section.settings.section_spacing_bottom != blank -%}
    --section-spacing-bottom: {% render 'to-rem', n: section.settings.section_spacing_bottom %};
  {%- endif -%}
  {%- if section.settings.section_inner_spacing_top != blank -%}
    --section-inner-spacing-top: {% render 'to-rem', n: section.settings.section_inner_spacing_top %};
  {%- endif -%}
  {%- if section.settings.section_inner_spacing_bottom != blank -%}
    --section-inner-spacing-bottom: {% render 'to-rem', n: section.settings.section_inner_spacing_bottom %};
  {%- endif -%}
  {%- if section.settings.full_width -%}
    --section-max-width: 100%;
  {%- else -%}
    --section-max-width: 73.125rem;
  {%- endif -%}
{%- endcapture -%}
{{ 'section-marks-promise.css' | asset_url | stylesheet_tag }}

<div class="section__marks-promise" style="{{ styling }}">
  <div class="container">
    <div class="hero__promise--pre-header text-center">
      <p>{{ section.settings.pre_header }}</p>
    </div>
    <div class="content__hero--promise-header text-center">
      <h2>{{ section.settings.section_header }}</h2>
      <strong>{{ section.settings.section_sub_header }}</strong>
      <p>{{ section.settings.section_paragraph }}</p>
      <a href="{{ section.settings.section_cta_url }}" class="btn">{{ section.settings.section_cta_text }}</a>
    </div>

    <div class="content__promises flex">
      {%- for block in section.blocks -%}
        <div class="content__promise text-center">
          <div class="content__promise--icon">
            {% render 'img', img: block.settings.block_icon, width: block.settings.block_icon.width, height: block.settings.block_icon.height, loading: 'lazy' %}
          </div>
          <div class="content__marks-promise--copy">
            <h2>{{ block.settings.block_header }}</h2>
            <p>{{ block.settings.block_paragraph }}</p>
            <a href="{{ block.settings.block_cta_url }}" class="btn">{{ block.settings.block_cta_text }}</a>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

