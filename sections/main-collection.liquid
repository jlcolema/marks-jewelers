{{ 'section-main-collection.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | round: 0 }}
      px;
      padding-bottom: {{ section.settings.padding_bottom | round: 0 }}
      px;
    }
  }
</style>

<div class="section-{{ section.id }}-padding">

  {% if collection.handle contains "lagos-fine-jewelry" %}
    {% render 'lagos-collection-header' %}
  {% else %}
    <h1 id="productCollectionTitle">{{ collection.title }}</h1>
  {% endif %}

  {% if collection.handle == "diamond-stud-earrings" %}
    {% render 'diamond-stud-header' %}
  {% elsif collection.handle == "ladies-diamond-wedding-rings" %}
    {% render 'ladies-diamond-wedding-header' %}
  {% elsif collection.handle == "engagement-rings" %}
    {% render 'engagement-rings-header' %}
  {% elsif collection.handle == "mens-wedding-bands" %}
    {% render 'mens-wedding-bands-header' %}
  {% elsif collection.handle == "mens-wedding-bands-1" %}
    {% render 'mens-wedding-bands-1-header' %}
  {% elsif collection.handle == "estate" %}
    {% render 'estate-header' %}
  {% elsif collection.handle == "necklaces" %}
