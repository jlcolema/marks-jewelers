{% schema %}
  {
    "name": "Collection",
    "class": "section",
    "settings": [
      {
        "type": "range",
        "id": "products_per_page",
        "min": 10,
        "max": 40,
        "step": 5,
        "default": 25,
        "label": "Products Per Page"
      }, {
        "type": "header",
        "content": "Header Content"
      }, {
        "type": "checkbox",
        "id": "enable_filtering",
        "default": true,
        "label": "Enable Filters"
      }, {
        "type": "checkbox",
        "id": "enable_sorting",
        "default": true,
