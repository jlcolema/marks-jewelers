    {
      "id": "section_spacing_top",
      "type": "text",
      "label": "Section Top Spacing",
      "info": "px"
    },
    {
      "id": "section_spacing_bottom",
      "type": "text",
      "label": "Section Bottom Spacing",
      "info": "px"
    },
    {
      "id": "section_inner_spacing_top",
      "type": "text",
      "label": "Section Top Padding",
      "info": "px"
    },
    {
      "id": "section_inner_spacing_bottom",
      "type": "text",
      "label": "Section Bottom Padding",
      "info": "px"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Diamond Collection",
      "settings": [
        {
          "id": "block_header",
          "type": "richtext",
          "label": "Section Header"
        },
        {
          "id": "block_sub_header",
          "type": "richtext",
          "label": "Section Sub Header"
        },
        {
          "id": "block_paragraph",
          "type": "richtext",
          "label": "Section Paragraph"
        },
        {
          "id": "section_diamond_img",
          "type": "image_picker",
          "label": "Select diamond image"
        },
        {
          "id": "section_brand_img",
