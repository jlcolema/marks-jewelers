      "label": "Heading font size mobile"
    },
    {
      "id": "section_image",
      "type": "image_picker",
      "label": "Background image"
    },
    {
      "id": "text_color",
      "type": "color",
      "label": "Text color"
    },
    {
      "id": "section_header",
      "type": "richtext",
      "label": "Section Header"
    },
    {
      "id": "section_sub_header",
      "type": "richtext",
      "label": "Section Sub Header"
    },
    {
      "id": "section_paragraph",
      "type": "richtext",
      "label": "Section Paragraph"
    },
    {
      "id": "section_cta_text",
      "type": "text",
      "label": "Button Text"
    },
    {
