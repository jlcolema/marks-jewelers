      "label": "Call section subheader"
    },
    {
      "id": "call_para",
      "type": "richtext",
      "label": "Call section paragraph"
    },
    {
      "id": "mail_header",
      "type": "richtext",
      "label": "Mail section header"
    },
    {
      "id": "mail_para",
      "type": "richtext",
      "label": "Mail section paragraph"
    },
    {
      "id": "email_header",
      "type": "richtext",
      "label": "Email section header"
    },
    {
      "id": "email_para",
      "type": "richtext",
      "label": "Email section paragraph"
    },
    {
      "id": "contact_form_list",
