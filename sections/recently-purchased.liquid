{{ 'section-recently-purchased.css' | asset_url | stylesheet_tag }}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}

<div class="container container--lg flow">
  {%- if section.settings.heading != blank -%}
    {% render 'section-heading', text: section.settings.heading %}
  {%- endif -%}

  {%- if section.settings.text != blank -%}
  <div class="recently-purchased__content flow">
    {{ section.settings.text }}

    {%- if section.settings.cta_text != blank and section.settings.cta_link != blank -%}
      <p class="recently-purchased__cta">
        <a href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_text }}
        </a>
      </p>
    {%- endif -%}
  </div>
  {%- endif -%}

  {%- if section.settings.collection != blank -%}
    <div class="recently-purchased__collection">
      {% assign card_counter = 0 %}
      {%- for product in collections[section.settings.collection].products -%}
        {% unless card_counter < section.settings.collection_number %}
          {% break %}
        {% endunless %}
        {% if product.featured_image %}
          {% render 'product-card', product: product, button_class: 'btn--primary' %}
          {% assign card_counter = card_counter | plus: 1 %}
        {% endif %}
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Recently Purchased",
  "class": "recently-purchased",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text/blurb"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose a collection"
    },
    {
      "type": "number",
      "id": "collection_number",
      "label": "Number of items to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Recently Purchased"
    }
  ]
}
{% endschema %}
